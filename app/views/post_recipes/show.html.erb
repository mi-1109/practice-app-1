<div class="recipe-show">
  <%= attachment_image_tag @post_recipe, :recipe_image %>
  <%= @post_recipe.title %>
  <%= @post_recipe.caption %>
  <%= @post_recipe.user.name %>
  <p>投稿日: <%= @post_recipe.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post_recipe.user == current_user %>
    <%= link_to "レシピを削除", post_recipe_path(@post_recipe), method: :delete, "data-confirm" => "本当にレシピを削除しますか？" %>
  <% end %>
</div>